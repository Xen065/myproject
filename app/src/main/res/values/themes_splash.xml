<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Splash Screen Theme -->
    <style name="Theme.EduMaster.Splash" parent="Theme.SplashScreen">
        <!-- Primary brand color for splash background -->
        <item name="windowSplashScreenBackground">@color/primary</item>

        <!-- Splash screen icon/logo -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>

        <!-- Icon size -->
        <item name="windowSplashScreenIconBackgroundColor">@color/primary</item>

        <!-- Duration for the animated icon -->
        <item name="windowSplashScreenAnimationDuration">500</item>

        <!-- Post splash screen theme -->
        <item name="postSplashScreenTheme">@style/Theme.EduMaster</item>
    </style>
</resources>
