<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:id="@+id/courseItemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Course Icon -->
        <TextView
            android:id="@+id/tvCourseIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/stat_icon_background"
            android:gravity="center"
            android:text="ðŸ“–"
            android:textSize="24sp" />

        <!-- Course Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCourseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English Vocabulary"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCourseProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="156/500 cards â€¢ Due: 12"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progressBarCourse"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="8dp"
                android:max="100"
                android:progress="31"
                android:progressTint="@color/primary" />
        </LinearLayout>

        <!-- Arrow Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:contentDescription="Go"
            android:src="@android:drawable/ic_menu_send"
            android:tint="@color/text_secondary" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
